# =============================================================================
# Stock Analysis Service - Production Environment Variables
# 프로덕션 환경 설정 템플릿
# =============================================================================
# 이 파일을 .env로 복사하고 실제 값을 입력하세요:
#   cp .env.production .env
# =============================================================================

# -----------------------------------------------------------------------------
# Flask 설정
# -----------------------------------------------------------------------------
FLASK_ENV=production
SECRET_KEY=your-very-secure-secret-key-change-this-in-production

# -----------------------------------------------------------------------------
# 데이터베이스 설정
# -----------------------------------------------------------------------------
DATABASE_URL=sqlite:///data/app.db
ELASTICSEARCH_URL=http://elasticsearch:9200

# -----------------------------------------------------------------------------
# OpenAI API 설정
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Gmail SMTP 설정
# -----------------------------------------------------------------------------
# Gmail 앱 비밀번호 생성 방법:
# 1. Google 계정 설정 > 보안 > 2단계 인증 활성화
# 2. Google 계정 설정 > 보안 > 앱 비밀번호 생성
# 3. 생성된 16자리 비밀번호를 아래에 입력
GMAIL_USERNAME=your-email@gmail.com
GMAIL_APP_PASSWORD=xxxx-xxxx-xxxx-xxxx

# -----------------------------------------------------------------------------
# 크롤러 설정
# -----------------------------------------------------------------------------
CRAWLER_TYPE=selenium
HEADLESS=true
CRAWL_TIMEOUT=30

# -----------------------------------------------------------------------------
# 스케줄러 설정
# -----------------------------------------------------------------------------
# 크롤링 스케줄: 3시간마다 (0, 3, 6, 9, 12, 15, 18, 21시)
CRAWL_INTERVAL_HOURS=3
# 메일 체크 스케줄: 매시간
MAIL_CHECK_INTERVAL_MINUTES=60
# 데이터 정리 스케줄: 매일 02:00
CLEANUP_HOUR=2

# -----------------------------------------------------------------------------
# 로깅 설정
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_DIR=logs

# -----------------------------------------------------------------------------
# 보안 설정
# -----------------------------------------------------------------------------
# 세션 타임아웃 (초)
SESSION_LIFETIME=86400
# Rate Limiting (요청/분)
RATE_LIMIT=60

# -----------------------------------------------------------------------------
# Docker/서버 설정
# -----------------------------------------------------------------------------
# Gunicorn Workers
GUNICORN_WORKERS=2
GUNICORN_THREADS=4
GUNICORN_TIMEOUT=120
